{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",   
    "lib": ["es2016"],       
    "outDir": "./dist",                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true                            
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
